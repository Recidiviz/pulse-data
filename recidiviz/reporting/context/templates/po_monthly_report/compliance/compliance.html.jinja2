{{ components.layout_table_start() }}
  {# success card will only actually contain one of these goals. assessment takes priority #}
  {% if assessments.goal_met or facetoface.goal_met %}
  <tr>
    <td>
      {% include "po_monthly_report/compliance/success.html.jinja2" %}
    </td>
  </tr>
  {# if both goals were met, render a second card in this group for contacts #}
  {% if assessments.goal_met and facetoface.goal_met %}
    {{ components.y_padding(2)}}
    <tr>
      <td>
        {% include "po_monthly_report/compliance/facetoface_card.html.jinja2" %}
      </td>
    </tr>
  {% endif %}
  {{ components.y_padding(8) }}
  {% endif %}
  
  {# non-success cards, if any, follow the success cards, if any #}
  {% if not assessments.goal_met %}
    <tr>
      <td>
        {% include "po_monthly_report/compliance/assessments_card.html.jinja2" %}
      </td>
    </tr>
    {{ components.y_padding(2)}}
  {% endif %}
  {% if not facetoface.goal_met %}
    <tr>
      <td>
        {% include "po_monthly_report/compliance/facetoface_card.html.jinja2" %}
      </td>
    </tr>
    {{ components.y_padding(2)}}
  {% endif %}
  {{ components.y_padding(40)}}
  <tr>
    <td>
      {% include "po_monthly_report/compliance/link_card.html.jinja2" %}
    </td>
  </tr>
  {{ components.y_padding(40)}}
{{ components.layout_table_end() }}
